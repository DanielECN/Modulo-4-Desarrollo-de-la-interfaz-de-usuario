<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="262dp"
        android:background="@drawable/background_homepage" />

    <TextView
        android:id="@+id/txt_inicio_homepage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="200dp"
        android:fontFamily="@font/jua"
        android:text="@string/txt_inicio_homepage"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/saludo_usuario_homepage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/txt_inicio_homepage"
        android:fontFamily="@font/jua"
        android:text="Hola, Usuario"
        android:textColor="#80FFFFFF"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/balance_total_homepage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/saludo_usuario_homepage"
        android:fontFamily="@font/jua"
        android:text="Balance Total"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/dinero_homepage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/balance_total_homepage"
        android:fontFamily="@font/jua"
        android:text="$124,57"
        android:textColor="@color/white"
        android:textSize="40sp" />





    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/profileImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="30dp"

        android:src="@drawable/profile"
        android:layout_toEndOf="@+id/txt_inicio_homepage"
         />


</RelativeLayout>



